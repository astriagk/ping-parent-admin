{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@views/*": ["./src/views/*"],
      "@pages/*": ["./src/pages/*"],
      "@common/*": ["./src/shared/common/*"],
      "@custom/*": ["./src/shared/custom/*"],
      "@components/*": ["./src/shared/components/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@slices/*": ["./src/slices/*"],
      "@utils/*": ["./src/utils/*"],
      "api_ data/*": ["./src/api_data/*"],
      "react": ["./node_modules/@types/react"]
    },
    "target": "ES2017",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/views/auth/resetPassword",
    "src/views/widgets/data",
    ".next/types/**/*.ts",
    "src/app/api/auth/[...nextauth]/route.ts"
  ],
  "exclude": ["node_modules"]
}
